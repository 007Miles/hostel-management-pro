<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true"
    android:layout_below="@+id/toolbar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FunctionsStuManagement">

        <include layout="@layout/toolbar"
            android:id="@+id/toolbar"/>

        <ImageView
            android:id="@+id/backgroundImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/student_home_background"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/backgroundImg"
            android:gravity="center">

            <Button
                android:id="@+id/regStudent"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@+id/toolbar"
                android:backgroundTint="@color/blue"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/student_register"
                android:layout_marginHorizontal="7dp"/>

            <Button
                android:id="@+id/stuProfiles"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_below="@+id/toolbar"
                android:gravity="center_vertical|center_horizontal"
                android:layout_gravity="center_vertical"
                android:backgroundTint="@color/blue"
                android:text="@string/student_profile"
                android:layout_marginHorizontal="7dp"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
